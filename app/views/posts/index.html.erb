<div class="flex flex-col items-center gap-5">
  <%# <button class="card font-bold text-xl w-2/5 text-center hover:bg-green-500 hover:text-white">Create a new post</button> %>
  <%= button_to "Create a new post", new_post_path, method: :get, class: "card font-bold text-xl w-full text-center hover:bg-green-500 hover:text-white" %>
  <% @posts.each do |post| %>
    <div class="card w-2/5 griddivide-y">
      <div class="text-base"><%= post.content %></div>
      <div class="font-light text-sm italic text-gray-500">Posted by <%= post.user.first_name %> <%= post.user.last_name %> on <%= post.created_at.to_fs(:long) %></div>
      <button class="hover:bg-gray-100">Like</button>
      <button class="hover:bg-gray-100">Comment</button>
    </div>
  <% end %>
</div>