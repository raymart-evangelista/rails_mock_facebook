<h1>mock facebook</h1>
<p>Connect with your friends and the world around you on Facebook.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "container mx") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%#= f.label :email, class: "block text-sm font-medium text-slate-700" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email or username", 
    class: "field-primary 
    invalid:border-pink-500 invalid:text-pink-600 focus:invalid:border-pink-500 focus:invalid:ring-pink-500
    peer" %>
    <p class="mt-2 invisible peer-invalid:visible text-pink-600 text-sm">Please provide a valid email address</p>
  </div>

  <div class="field">
    <%#= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password",
    class: "field-primary" %>
  </div>

  <%# if devise_mapping.rememberable? %>
    <%# <div class="field"> %>
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <%# </div> %>
  <%# end %>

  <div class="actions">
    <%= f.submit "Log in", class: "rounded text-white font-semibold px-8 py-3
    bg-blue-500 hover:bg-blue-600 active:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
