<div class="flex flex-col items-center gap-5">
  <button class="card font-bold text-xl w-2/5 text-center hover:bg-green-500 hover:text-white">Create a new post</button>
  <% @posts.each do |post| %>
    <div class="card w-2/5 grid gap-3 hover:bg-gray-100">
      <div class="font-bold text-xl"><%= post.title %></div>
      <div class="font-light text-base"><%= post.content %></div>
      <div class="font-light text-sm italic text-gray-500">Posted by <%= post.user.first_name %> <%= post.user.last_name %> on <%= post.created_at.to_fs(:long) %></div>
    </div>
  <% end %>
</div>