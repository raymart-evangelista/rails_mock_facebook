<!DOCTYPE html>
<html>
  <head>
    <title>MockFacebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="flex flex-col w-full min-h-screen">
    <%#= button_to "Home", root_path, method: :get %>
    <% if current_user %>
      <div class="grow-0">
        <%= render "layouts/navbar" %>
      </div>
    <% else %>
      <%#= link_to "Log in", new_user_session_path, method: :get %>
      <%#= button_to "Log in", new_user_session_path, method: :get %>
      <%# <br> %>
      <%#= link_to "Sign up", new_user_registration_path, method: :get %>
      <%#= button_to "Sign up", new_user_registration_path, method: :get %>
    <% end %>
    <div class="grow">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
    <% if current_user %>
      <div class="grow-0">
        <%= render "layouts/footer" %>
      </div>
    <% end %>
  </body>
</html>
